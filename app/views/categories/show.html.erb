<% set_meta_tags title: @category.name %>

<% content_for :content_css_link_yield do %>
  <%= stylesheet_link_tag 'categories' %>
<% end %>

<ol class="breadcrumb">
  <li>
    <% url = @category.catalog.type.downcase.gsub(/catalog$/, '_path') %>

    <%= link_to eval(url) do %>
      <%= @category.catalog.human_supercatalog_name %>
    <% end %>
  </li>

  <li>
    <%= link_to catalog_path(@category.catalog) do %>
      <%= @category.catalog.name %>
    <% end %>
  </li>

  <li class="active"><%= @category.name %></li>
</ol>


<% if @category.present? %>
  <div class="panel panel-default popular-projects">
    <div class="panel-body">
      <% @projects.order(popularity: :desc).limit(6).each_slice(2) do |projects| %>
        <div class="brother">
          <% projects.each do |project| %>
            <div class="col-md-2 col-xs-6 xs-no-padding popular-item">
              <%= link_to repo_path(project.repo_params), target: "_blank" do %>
                <%= project.name %>
                <br>
                <%= project.popularity %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>


<div class="panel panel-default">
  <div class="panel-heading">
    本类目下共有 <%= @projects.size %> 个项目
  </div>

  <div class="panel-body">
    <% if @projects.blank? %>
      <div class="text-center text-muted">
        没有搜索到结果
      </div>
    <% else %>
      <ul class="media-list">
        <%= render partial: "projects/media_list_item", collection: @projects, as: :project %>
      </ul>
    <% end %>
  </div>
</div>

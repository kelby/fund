<% if project.had_recommend_by?(current_user) %>
  <%= button_to project_recommend_path(project), remote: true, method: :delete, class: "btn btn-default prepend-button", form_class: "prepend-button-append-link" do %>
    <i class="fa fa-heart"></i>
    取消推荐
  <% end %>
<% else %>
  <%= button_to project_recommend_path(project), remote: true, class: "btn btn-default prepend-button", form_class: "prepend-button-append-link" do %>
    <i class="fa fa-heart"></i>
    推荐
  <% end %>
<% end %>

<%= link_to recommend_repo_path(project.repo_params), class: "btn btn-default" do %>
  <%= project.user_recommend_projects.size %>
<% end %>

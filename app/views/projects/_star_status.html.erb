<% if project.had_star_by?(current_user) %>
  <%= button_to project_star_path(project), remote: true, method: :delete, class: "btn btn-default prepend-button", form_class: "prepend-button-append-link" do %>
    <i class="fa fa-bookmark"></i>
    取消收藏
  <% end %>
<% else %>
  <%= button_to project_star_path(project), remote: true, class: "btn btn-default prepend-button", form_class: "prepend-button-append-link" do %>
    <i class="fa fa-bookmark"></i>
    收藏
  <% end %>
<% end %>

<%= link_to star_project_path(project), class: "btn btn-default" do %>
  <%= project.user_star_projects.size %>
<% end %>

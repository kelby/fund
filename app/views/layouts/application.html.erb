<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags site: "Fund Toolbox", reverse: true %>

    <%= csrf_meta_tags %>

    <!-- base css here -->
    <%= stylesheet_link_tag    'application', media: 'all' %>

    <!-- layout_css_link_yield -->
    <%= yield(:layout_css_link_yield) %>
    <!-- content_css_link_yield -->
    <%= yield(:content_css_link_yield) %>

    <!-- more css here. -->


    <!-- base js here -->
    <%= javascript_include_tag 'application' %>

    <!-- layout_js_link_yield -->
    <%= yield(:layout_js_link_yield) %>

    <!-- meta -->
    <meta content="IE=edge" http-equiv=X-UA-Compatible>
    <meta content="width=device-width,initial-scale=1" name=viewport>

    <!-- google authtication -->
    <!-- <meta name="google-site-verification" content="LAnUZ1onQXapojdsdqHSQs-jaHQdEDSQAJOfQ5eXw48" /> -->
    <!-- Search Console -->
    <meta name="google-site-verification" content="okJ_w2UII_kjLd1S_I3X4SzGmjfyi81XE7a-NH_LzLw" />
  </head>

  <body>
    <!-- Fixed navbar -->
    <%= render "layouts/navbar" %>


    <!-- Begin page content -->
    <div class="container <%= params[:controller] %>">
      <%= render "layouts/notice_or_alert" %>

      <%= yield :prefix %>


      <!-- begin per page body content -->
        <%= yield %>
      <!-- end per page body content -->


      <%= yield :postfix %>
    </div>


    <%= render "layouts/footer" %>

    <!-- more js here... -->
    <%= content_for :javascripts %>

    <script>
      $( ".select2" ).select2({
        theme: "bootstrap"
      });
    </script>
  </body>
</html>

<p id="notice"><%= notice %></p>

<h1>
  基金经理

  <small>
    <%= @developers.unscope(:limit, :offset).count %>
  </small>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>就职于某基金公司</th>
      <th>Avatar</th>
      <th>eastmoney</th>
      <th>Public repos</th>
      <th>Subscribers count</th>
      <th>Watchers count</th>
      <th>Forks count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr>
        <td><%= link_to developer.name, developer %></td>
        <td>
          <% developer.catalogs.each do |catalog| %>
            <%= link_to catalog.code, catalog %>
            -
            <%= catalog.name %>
          <% end %>
        </td>
        <td><%= developer.avatar %></td>
        <td><%= developer.eastmoney_url %></td>
        <td><%= developer.developer_projects.count %></td>
        <td><%= developer.subscribers_count %></td>
        <td><%= developer.watchers_count %></td>
        <td><%= developer.forks_count %></td>
        <td><%= link_to 'Show', developer %></td>
        <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
        <td><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <%= magic_paginate @developers %>

<br>

<%= link_to 'New Developer', new_developer_path %>

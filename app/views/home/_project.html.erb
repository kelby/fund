<div class="col-md-4 recommend-item">
  <h3>
    <%= link_to repo_path(project.repo_params) do %>
      <%= project.show_name %>
    <% end %>
  </h3>

  <%= link_to repo_path(project.repo_params), class: "wrap-description" do %>
    <%= simple_format project.description, {class: "text-muted"} %>
  <% end %>
</div>

        <% end %>
      </h2>

      <section class="pull-right">
        <%= LaravelCatalog.count %>
      </section>
    </div>

    <div class="panel-body">
      <ul class="list-group row">
        <%= render partial: "home/catalog", as: :catalog, collection: LaravelCatalog.all.includes(:categories) %>
      </ul>
    </div>
  </div>
  </div>

  <div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="top-catalog">
        <%= link_to swift_path do %>

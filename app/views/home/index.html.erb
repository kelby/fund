<% content_for :content_css_link_yield do %>
  <%= stylesheet_link_tag 'home' %>
<% end %>

<h1 class="slogan">
  Projects worth sharing, Know Your Options!
</h1>

<div class="row">
  <div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="top-catalog">
        <%= link_to rails_path do %>
          Rails
        <% end %>
      </h2>

      <section class="pull-right">
        <%= RailsCatalog.count %>
      </section>
    </div>
    <div class="panel-body">
      <ul class="list-group row">
        <%= render partial: "home/catalog", as: :catalog, collection: RailsCatalog.all.includes(:categories) %>
      </ul>
    </div>
  </div>
  </div>


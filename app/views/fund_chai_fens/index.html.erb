<% set_meta_tags title: "基金拆分" %>

<h1>
  基金拆分
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>基金代码</th>
      <th>基金简称</th>

      <th>拆分折算日</th>
      <th>拆分类型</th>
      <th>拆分折算(每份)</th>
    </tr>
  </thead>

  <tbody>
    <% @fund_chai_fens.each_with_index do |fund_chai_fen, index| %>
      <% project = fund_chai_fen.project %>

      <% page = params[:page].to_i %>
      <% page = 1 if page.zero? %>

      <tr>
        <th><%= (index + 1) + (page - 1) * 100 %></th>
        <th>
          <%= link_to project, target: "_blank" do %>
            <%= project.code %>
          <% end %>
        </th>
        <th>
          <%= link_to project, target: "_blank" do %>
            <%= project.name %>
          <% end %>
        </th>

        <th><%= fund_chai_fen.break_convert_at %></th>
        <th><%= fund_chai_fen.break_type %></th>
        <th><%= fund_chai_fen.human_break_ratio %></th>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="text-center">
  <%= magic_paginate @fund_chai_fens %>
</div>

<% set_meta_tags title: "注册 - Sign up" %>

<% content_for :content_css_link_yield do %>
  <%= stylesheet_link_tag "pages/page_log_reg_v1" %>
<% end %>

<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "reg-page"} do |f| %>

        <div class="reg-header">
          <h2>注册</h2>
          <p>
            已有账号？点此
            <%= link_to "登录", new_session_path(resource_name), class: "color-green" %>
          </p>
        </div>

        <div class="form-group">
          <%= f.label :username do %>
            <i class="fa fa-user-o" aria-hidden="true"></i>
            用户名
          <% end %>

          <%= f.text_field :username, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email do %>
            <i class="fa fa-envelope" aria-hidden="true"></i>
            邮箱
          <% end %>

          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="row">
          <div class="col-sm-6">
            <%= f.label :password do %>
              <i class="fa fa-lock" aria-hidden="true"></i>
              密码<span class="color-red">*</span>
            <% end %>

            <%= f.password_field :password, autocomplete: "off", class: "form-control margin-bottom-20" %>
          </div>

          <div class="col-sm-6">
            <%= f.label :password_confirmation do %>
              <i class="fa fa-lock" aria-hidden="true"></i>
              密码确认<span class="color-red">*</span>
            <% end %>

            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control margin-bottom-20" %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :_rucaptcha do %>
            <i class="fa fa-yoast"></i>
            验证码
          <% end %>

          <div class="verify-code">
            <a class="rucaptcha-image-box" href="javascript:void(0)">
              <%= rucaptcha_image_tag(alt: '验证码') %>
              <i class="fa fa-refresh" aria-hidden="true"></i>
            </a>
          </div>

          <%= rucaptcha_input_tag class: 'form-control', placeholder: '请输入验证码' %>
        </div>

        <hr>

        <div class="row">
          <div class="col-lg-12 text-right">
            <%= f.submit "提交", class: "btn btn-u" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div><!--/container-->
<!--=== End Content Part ===-->

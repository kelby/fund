<small class="pull-right">
  <%= form_tag quickrank_history_search_path, class: "form-inline", method: :get do %>
    <%= select_tag "year", options_for_select(FundRanking.record_at_years, params[:year]) %>

    <%= select_tag "month_day", options_for_select(FundRanking.record_at_month_day_by(FundRanking.max_record_at), params[:month_day]) %>

    <%= button_tag "查询" %>
  <% end %>
</small>

<script>
  $(document).on("change", "#year", function(argument) {
    var url = "<%= history_quickrank_index_path %>"
    var year = $(this).val()

    $.ajax({
      url: url,
      data: {'year': year},
      dataType: 'script'
    });
  })
</script>

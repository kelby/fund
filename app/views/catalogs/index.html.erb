<% set_meta_tags title: "Catalogs" %>


<% content_for :content_css_link_yield do %>
  <%= stylesheet_link_tag 'catalogs' %>
<% end %>

<div class="title">

  <h1>
    Catalogs

    <small>
      <%= link_to 'New Catalog', new_catalog_path %>
    </small>
  </h1>

</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h2>
      Rails
      <small><%= @rails_catalogs.size %></small>
    </h2>
  </div>

  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Slug</th>
          <th>Categories</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'catalogs/catalog', collection: @rails_catalogs %>
      </tbody>
    </table>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">

  <h2>Laravel <small><%= @laravel_catalogs.size %></small></h2>
  </div>
  <div class="panel-body">

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Slug</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>    
      <%= render partial: 'catalogs/catalog', collection: @laravel_catalogs %>
    </tbody>
  </table>
  </div>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Swift <small><%= @swift_catalogs.size %></small></h2>
  </div>

  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Slug</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'catalogs/catalog', collection: @swift_catalogs %>
      </tbody>
    </table>
  </div>
</div>

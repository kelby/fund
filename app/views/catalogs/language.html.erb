<% set_meta_tags title: params[:action].capitalize %>

<% content_for :content_css_link_yield do %>
  <%= stylesheet_link_tag 'catalogs' %>
<% end %>

<div class="col-xs-12 col-md-12 content">
  <div class="col-md-9 xs-no-padding">
    <ul class="catalog-list">
      <% @catalogs.each do |catalog| %>
        <li>
          <h2>
            <%= link_to catalog_path(catalog) do %>
              <%= catalog.name %>
            <% end %>

            <% if catalog.sketch.present? %>
              <small>
                <%= catalog.sketch %>
              </small>
            <% end %>
          </h2>
        </li>

        <ul class="category-list">
          <% catalog.categories.each do |category| %>
            <li>
              <%= link_to category.name, category %>
            </li>
          <% end %>
        </ul>
      <% end %>

    </ul>
  </div>

  <div class="col-md-3 xs-no-padding">
    <div class="panel panel-default">
      <div class="panel-heading">项目是什么？</div>
      <div class="panel-body">
        <p>
          给 GitHub 开源项目做一个分类，帮你更好发现和寻找到你所需的开源项目。
        </p>

        <div class="text-center">
          <%= link_to "分享优质项目", new_project_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

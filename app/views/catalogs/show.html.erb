<% set_meta_tags title: @catalog.name %>

<% content_for :content_css_link_yield do %>
  <%= stylesheet_link_tag 'catalogs' %>
<% end %>

<ol class="breadcrumb bg-color-white catalog-category-etc">

  <li>
    <%= link_to "基金公司", catalogs_path %>
  </li>

  <li class="active">
    <%= @catalog.name %>
  </li>

  <% if can? :edit, @catalog %>
    <section class="pull-right">
      <%= link_to "编辑", edit_catalog_path(@catalog) %>
    </section>
  <% end %>
</ol>

<!-- <div class="col-md-12"> -->
<div class="panel panel-default show-catalog">
  <div class="panel-heading">
    <h2 class="panel-title top-catalog">
      <%= link_to catalog_path(@catalog) do %>
        <%= @catalog.name %>

        <small>
          简称：<%= @catalog.short_name %>
        </small>
      <% end %>

      <% if @catalog.sketch.present? %>
        <small>
          <%= @catalog.sketch %>
        </small>
      <% end %>

      <small class="pull-right">
        <%= @catalog.online_categories_count %>
      </small>
    </h2>
  </div>

  <!-- <div class="panel-body no-padding"> -->

    <ul class="list-group">
      <%#= render partial: "categories/list_item", collection: @catalog.categories.online, as: :category %>
      <% if @catalog.set_up_at.present? %>
        <li class="list-group-item">
          成立: <%= @catalog.set_up_at.strftime("%F") %>
        </li>
      <% end %>

      <% if @catalog.scale_record_at.present? %>
        <li class="list-group-item">
          管理规模: <%= @catalog.scale %>

          <small>
            <%= @catalog.scale_record_at.strftime("%F") %>
          </small>
        </li>
      <% end %>

      <li class="list-group-item">
        简称: <%= @catalog.short_name %>
      </li>

      <li class="list-group-item">
        总经理: <%= @catalog.founder %>
      </li>
    </ul>
  <!-- </div> -->

  <% if @catalog.footnote.present? %>
    <div class="panel-footer">
      <%= simple_format @catalog.footnote, {}, wrapper_tag: false %>
    </div>
  <% end %>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
    本基金公司旗下共有 <%= @projects.confirm_lineal.size %> 支基金
  </div>

  <div class="panel-body">
    <% if @projects.blank? %>
      <div class="text-center text-muted">
        没有搜索到结果
      </div>
    <% else %>
      <ul class="media-list">
        <%= render partial: "projects/media_list_item", collection: @projects, as: :project %>
      </ul>
    <% end %>
  </div>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
    本基金公司旗下共有 <%= @catalog.catalog_developers.size %> 名基金经理
  </div>

  <div class="panel-body">
    <% if @catalog.catalog_developers.blank? %>
      <div class="text-center text-muted">
        没有
      </div>
    <% else %>
      <ul class="media-list">
        <% @catalog.developers.each do |developer| %>
          <li class="list-group-item">
            <%= link_to developer do %>
              <%= image_tag(developer.avatar_url(:thumb), size: "50") %>
              -
              <%= developer.name %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<%#= link_to 'Edit', edit_catalog_path(@catalog) %>
<%#= link_to 'Back', catalogs_path %>

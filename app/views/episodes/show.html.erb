<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= link_to episode_path(@episode) do %>
        今日推荐
      <% end %>

      <small class="pull-right">
        <%= link_to episode_path(@episode) do %>
          第 #<%= @episode.human_id %> 期
        <% end %>
      </small>

    </h3>
  </div>

  <div class="panel-body content">
    <% if @recommend_gems.blank? && @recommend_pods.blank? %>
      <div class="text-center text-muted">
        没有搜索到结果
      </div>
    <% else %>
      <ul class="media-list">
        <%= render partial: "projects/media_list_item", collection: @recommend_gems, as: :project %>
        <%= render partial: "projects/media_list_item", collection: @recommend_pods, as: :project %>
      </ul>
    <% end %>
  </div>
</div>
